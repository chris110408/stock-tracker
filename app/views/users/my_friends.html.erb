
<%= render 'friends/lookup' %>

<% if @friendships.size > 0 %>
    <table class="table tabel-striped">
      <thead>
      <tr>
        <th class="page-header" colspan="3">
          <h2>My Friends</h2>
        </th>
      </tr>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @friendships.each do |f| %>
          <tr>
            <td><%= f.full_name %></td>
            <td><%= f.email %></td>
            <td>
                  <%= link_to 'view profile', user_path(f),class:"btn btn-primary btn-xs" %>

                  <%= link_to 'Remove Friend',friendship_path(f),:method => :delete,
                              :data =>{:confirm => "Are you sure?"} ,
                              :class => "btn btn-xs btn-danger" %>
            </td>
          </tr>

      <% end %>
      </tbody>
    </table>

<% else %>
    <div class="row col-sm-12">
      <p class="lead">
        You donot have any friends yet. please add some!
      </p>
    </div>
<% end %>

